<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:cardCornerRadius="10dp"
       android:layout_margin="10dp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_margin="5dp">

           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="0.7"
               android:orientation="vertical">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"
               android:id="@+id/tripNameTv"
               android:textSize="18dp"
               android:drawableLeft="@drawable/ic_local_mall_black_24dp"
               android:drawablePadding="5dp"/>


<!--           <TextView-->
<!--               android:layout_width="match_parent"-->
<!--               android:layout_height="wrap_content"-->
<!--               android:layout_margin="5dp"-->
<!--               android:id="@+id/tripBudgetTv"-->
<!--               android:textSize="14dp"-->
<!--               android:drawableLeft="@drawable/ic_money"-->
<!--               android:drawablePadding="7dp"/>-->

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_margin="5dp">

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_event_note_black_24dp"
                   android:layout_marginRight="5dp"/>

           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="0.3"
               android:layout_gravity="center"
               android:id="@+id/tripStartDateTv"
               android:textSize="12dp"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="  To  "
                   android:layout_marginRight="5dp"
                   android:layout_gravity="center"/>

           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="0.3"
               android:layout_gravity="center"
               android:id="@+id/tripEndDateTv"
               android:textSize="12dp"/>
           </LinearLayout>

       </LinearLayout>

           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_weight="0.2"
               android:orientation="horizontal">

               <ImageView
                   android:id="@+id/tripUpdateIv"
                   android:layout_width="0dp"
                   android:layout_weight="0.5"
                   android:layout_height="30dp"
                   android:layout_margin="5dp"
                   android:src="@drawable/ic_edit_black_24dp" />
               <ImageView
                   android:id="@+id/tripDeleteIv"
                   android:layout_width="0dp"
                   android:layout_weight="0.5"
                   android:layout_height="30dp"
                   android:layout_margin="5dp"
                   android:src="@drawable/ic_delete_forever_black_24dp" />

           </LinearLayout>


       </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:weightSum="3"
               android:layout_marginTop="00dp"
               android:background="@color/lightOrange"
               android:layout_height="wrap_content">

               <TextView
                   android:id="@+id/detailsTV"
                   android:layout_width="match_parent"
                   android:layout_weight="1"
                   android:text="Details"
                   android:textSize="18sp"
                   android:gravity="center"
                   android:textColor="#FFFFFF"
                   android:layout_height="wrap_content">

               </TextView>

               <TextView
                   android:id="@+id/expenseTV"
                   android:layout_width="match_parent"
                   android:layout_weight="1"
                   android:text="Expense"
                   android:textColor="#FFFFFF"
                   android:textSize="18sp"
                   android:gravity="center"
                   android:layout_height="wrap_content">

               </TextView>
               <TextView
                   android:id="@+id/momentTV"
                   android:layout_width="match_parent"
                   android:layout_weight="1"
                   android:text="Moments"
                   android:textColor="#FFFFFF"
                   android:textSize="18sp"
                   android:gravity="center"
                   android:layout_height="wrap_content">

               </TextView>

           </LinearLayout>

       </LinearLayout>
   </androidx.cardview.widget.CardView>


</LinearLayout>